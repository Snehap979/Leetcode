*/
var isPowerOfTwo = function(n) {
    /**
 * @param {number} n
 * @return {boolean}
 */
let powerVal=0
    if(n==0)
    return false
    if(n==1 || n==2)
    {
        return true
    }

    if(n%4!=0)
    return false
    let i=0
   while(powerVal<=n)
   {
       powerVal=Math.pow(2,i)
       if(powerVal==n)
       {
           return true
       }
       i=i+1
   }
return false
};
